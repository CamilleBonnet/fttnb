<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for @user do |f| %>
      <%= f.input :first_name, placeholder: 'Your first name', required: true %>
      <%= f.input :last_name , placeholder: 'Your last name', required: true%>
      <%= f.input :photo, as: :attachinary %>
      <%= f.submit class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
