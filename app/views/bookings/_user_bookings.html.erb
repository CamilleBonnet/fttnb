
<div class="message">
  <%= cl_image_tag booking.flat.user.photo.path, class:"avatar" %>
  <div class="message-name">
    <h3><%= booking.flat.name %> </h3>
  </div>
  <div class="message-body">
    <p><strong>this flat is owned by <%= booking.flat.user.first_name %></strong></p>
    <p>
      Some text
    </p>
  </div>
  <div class="message-status">
    <p class="status pending"><%= booking.status %></p>
    <p class="price"><%= booking.price_booking %>â‚¬</p>
  </div>
  <div class="booking-btn">
    <%= link_to "Edit this booking", edit_booking_path(booking), class:"btn btn-primary btn-sm" %>
    <%= link_to "Delete this booking", delete_booking_path(booking), method: :delete, class:"btn btn-danger btn-sm" %>
  </div>
</div>
